<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>disable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackAsTool>true</PackAsTool>
        <ToolCommandName>viking</ToolCommandName>
        <Title>Viking</Title>
        <Description>Viking is the CLI Tool For Backlang</Description>
        <PackageProjectUrl>https://www.backlang.org</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Backlang-Org/viking</RepositoryUrl>
        <PackageTags>backlang</PackageTags>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="CliWrap" Version="3.6.4" />
      <PackageReference Include="GitSharp" Version="0.3.0" />
      <PackageReference Include="NuGet.Protocol" Version="6.6.1" />
      <PackageReference Include="Spectre.Console" Version="0.47.0" />
      <PackageReference Include="Spectre.Console.Cli" Version="0.47.0" />
    </ItemGroup>

</Project>
